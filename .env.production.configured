# ============================================================================
# Fleet Application - Production Environment Configuration
# ============================================================================
# Generated: 2025-12-08
# Production URL: https://fleet.capitaltechalliance.com

# ============================================================================
# API Configuration
# ============================================================================

# DEMO MODE: Enable mock data when API backend is not available
# Set to 'true' to use client-side demo data (no backend required)
# Set to 'false' to use real API backend
VITE_USE_MOCK_DATA=true

# API Base URL (only used when VITE_USE_MOCK_DATA=false)
# For Azure Static Web Apps with Managed Functions:
# VITE_API_URL=https://fleet.capitaltechalliance.com
# For separate API backend:
# VITE_API_URL=https://fleet-api.gentlepond-ec715fc2.eastus2.azurecontainerapps.io
VITE_API_URL=https://fleet.capitaltechalliance.com

# ============================================================================
# WebSocket Configuration (Demo Mode Disabled)
# ============================================================================

# Radio Dispatch Socket (currently unavailable in production)
VITE_RADIO_SOCKET_URL=

# Dispatch System Socket (currently unavailable in production)
VITE_DISPATCH_SOCKET_URL=

# OBD2 Emulator WebSocket (currently unavailable in production)
VITE_OBD2_SOCKET_URL=

# ============================================================================
# Authentication Configuration
# ============================================================================

# Azure AD Configuration (for SSO - optional)
VITE_AZURE_AD_CLIENT_ID=baae0851-0c24-4214-8587-e3fabc46bd4a
VITE_AZURE_AD_TENANT_ID=0ec14b81-7b82-45ee-8f3d-cbc31ced5347
VITE_AZURE_AD_REDIRECT_URI=https://fleet.capitaltechalliance.com/auth/callback

# ============================================================================
# Map Services Configuration
# ============================================================================

# Google Maps API Key (for map features)
# Get your API key from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Mapbox Access Token (alternative map provider)
VITE_MAPBOX_ACCESS_TOKEN=

# ============================================================================
# Application Insights (Telemetry)
# ============================================================================

# Azure Application Insights
VITE_APPINSIGHTS_INSTRUMENTATIONKEY=
VITE_APPINSIGHTS_CONNECTION_STRING=

# ============================================================================
# Feature Flags
# ============================================================================

# Enable demo data for development/testing
VITE_ENABLE_DEMO_DATA=true

# Enable debug mode (verbose logging in console)
VITE_DEBUG_MODE=false

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=true

# ============================================================================
# Sentry Error Tracking (Optional)
# ============================================================================

VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.1

# ============================================================================
# Build Configuration
# ============================================================================

NODE_ENV=production
VITE_APP_VERSION=1.0.1
VITE_APP_NAME=Fleet Management System

# ============================================================================
# IMPORTANT NOTES
# ============================================================================
#
# DEMO MODE ENABLED:
# - Application runs entirely client-side with mock data
# - No backend API required
# - Perfect for demos, testing, and development
# - All CRUD operations work in-memory only
#
# TO ENABLE REAL API:
# 1. Deploy the backend API (from /api directory)
# 2. Set VITE_USE_MOCK_DATA=false
# 3. Set VITE_API_URL to your backend URL
# 4. Configure authentication (Azure AD or JWT)
#
# CURRENT STATUS:
# - Frontend: Deployed to Azure Static Web Apps
# - Backend: NOT deployed (using demo mode instead)
# - WebSockets: Disabled (optional feature)
#
