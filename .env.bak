# ============================================================================
# Fleet Management System - Environment Configuration
# ============================================================================

# ============================================================================
# Backend API Configuration
# ============================================================================

# Backend API URL - defaults to current origin if not specified
# Production: Set to your deployed API URL
# Development: Leave empty to use localhost
VITE_API_URL=

# Example (Production):
# VITE_API_URL=https://api.fleetmanagement.example.com

# Example (Development):
# VITE_API_URL=http://localhost:3000

# ============================================================================
# API Client Configuration
# ============================================================================

# Request timeout in milliseconds (default: 30000 = 30 seconds)
VITE_API_TIMEOUT=30000

# Maximum number of retry attempts for failed requests (default: 3)
VITE_API_MAX_RETRIES=3

# Base delay for exponential backoff in milliseconds (default: 1000 = 1 second)
VITE_API_RETRY_BASE_DELAY=1000

# Enable API request logging for debugging (default: false)
VITE_API_DEBUG=false

# ============================================================================
# React Query Configuration
# ============================================================================

# Cache time in milliseconds (default: 600000 = 10 minutes)
VITE_QUERY_CACHE_TIME=600000

# Stale time in milliseconds (default: 300000 = 5 minutes)
VITE_QUERY_STALE_TIME=300000

# Enable refetch on window focus (default: false for better performance)
VITE_QUERY_REFETCH_ON_FOCUS=false

# ============================================================================
# Feature Flags
# ============================================================================

# Use mock data instead of API (for offline development only)
# WARNING: Set to 'false' for production - demo data removed in FEAT-007
VITE_USE_MOCK_DATA=false

# Enable debug logging for fleet data hook
# Set to 'true' to see detailed API response logging in console
VITE_DEBUG_FLEET_DATA=false

# ============================================================================
# WebSocket Configuration (Real-Time Updates)
# ============================================================================

# WebSocket Server URL
# Development: ws://localhost:3000
# Production: wss://your-domain.com/ws
# Leave empty to auto-detect from current origin
VITE_WS_URL=

# WebSocket Reconnection Settings
# Initial reconnect interval in milliseconds (default: 1000 = 1 second)
VITE_WS_RECONNECT_INTERVAL=1000

# Maximum number of reconnection attempts (default: 10)
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# WebSocket Heartbeat Interval in milliseconds (default: 30000 = 30 seconds)
# Ping/pong messages to keep connection alive
VITE_WS_HEARTBEAT_INTERVAL=30000

# Enable WebSocket debug logging (default: false)
VITE_WS_DEBUG=false

# Examples:
# Development:
# VITE_WS_URL=ws://localhost:3000
#
# Production:
# VITE_WS_URL=wss://api.fleetmanagement.example.com/ws

# ============================================================================
# 3D Model Generation (Optional)
# ============================================================================

# Meshy.ai API Key for AI-Generated Photorealistic 3D Models
# Sign up at: https://meshy.ai
# Cost: ~$0.10 per model (preview) or ~$1.00 (refine mode)
# Once generated, models are cached for 90 days
VITE_MESHY_API_KEY=

# Example:
# VITE_MESHY_API_KEY=msy_your_api_key_here

# ============================================================================
# Application Settings
# ============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=false
# VITE_API_URL=http://localhost:3000/api
# BASE_URL=http://localhost:3000

# ============================================================================
# Azure AD OAuth Configuration
# ============================================================================

# Azure AD Client ID
VITE_AZURE_AD_CLIENT_ID=baae0851-0c24-4214-8587-e3fabc46bd4a

# Azure AD Tenant ID
VITE_AZURE_AD_TENANT_ID=0ec14b81-7b82-45ee-8f3d-cbc31ced5347

# Azure AD Redirect URI (for development)
VITE_AZURE_AD_REDIRECT_URI=http://localhost:5174/auth/callback

# ============================================================================
# Azure Application Insights (Telemetry)
# ============================================================================

# Application Insights Connection String (optional - for production telemetry)
# Leave empty for development to skip telemetry
VITE_APPLICATION_INSIGHTS_CONNECTION_STRING=
