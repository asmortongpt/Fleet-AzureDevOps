# Test Environment Configuration
# DO NOT USE IN PRODUCTION

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fleet_test
DATABASE_USER=${USER}
DATABASE_PASSWORD=
DATABASE_URL=postgresql://${USER}@localhost:5432/fleet_test

# Node Environment
NODE_ENV=test

# Server Configuration
PORT=3001
API_BASE_URL=http://localhost:3001

# JWT Configuration (test only)
JWT_SECRET=test_jwt_secret_for_integration_tests_only_do_not_use_in_production
SESSION_SECRET=test_session_secret_for_integration_tests_only

# Test-specific settings
SKIP_AUTH=false
ENABLE_TEST_ROUTES=true
LOG_LEVEL=error

# Disable external services during tests
DISABLE_SENTRY=true
DISABLE_EXTERNAL_APIS=true
