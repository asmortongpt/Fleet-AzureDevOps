FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm install

# Copy source files
COPY radio-traffic-emulator.ts ./

# Compile TypeScript to JavaScript
RUN npx tsc

# Expose ports (if needed for future API)
EXPOSE 3004

# Start the compiled JavaScript file
CMD ["node", "dist/radio-traffic-emulator.js"]
