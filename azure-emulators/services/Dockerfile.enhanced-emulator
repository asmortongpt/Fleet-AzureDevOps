FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm install

# Copy source
COPY enhanced-fleet-emulator-with-samsara.ts ./

# Compile TypeScript
RUN npx tsc

# Run the emulator
CMD ["node", "dist/enhanced-fleet-emulator-with-samsara.js"]
