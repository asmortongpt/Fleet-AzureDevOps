FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm install

# Copy source files
COPY emulator-command-api.ts ./

# Compile TypeScript to JavaScript
RUN npx tsc

# Expose command API port
EXPOSE 3005

# Start the compiled JavaScript file
CMD ["node", "dist/emulator-command-api.js"]
