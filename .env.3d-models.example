# ============================================================================
# 3D Vehicle Models Configuration
# ============================================================================

# Feature Flags
VITE_ENABLE_3D_MODELS=true
VITE_ENABLE_AR_VIEW=true

# Azure Blob Storage (for model storage)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=vehicle-models
AZURE_CDN_ENDPOINT=https://YOUR_CDN.azureedge.net

# Sketchfab API (optional - for importing free models)
SKETCHFAB_API_KEY=your_sketchfab_api_key_here

# Model Library Settings
VITE_MAX_MODEL_FILE_SIZE_MB=100
VITE_DEFAULT_MODEL_QUALITY=medium
VITE_ENABLE_MODEL_UPLOAD=true
VITE_ENABLE_SKETCHFAB_IMPORT=true

# Azure Front Door (for CDN - optional)
AZURE_FRONT_DOOR_ENDPOINT=https://your-fleet.azurefd.net

# Performance Settings
VITE_3D_VIEWER_DPR_MAX=2.0
VITE_3D_VIEWER_SHADOW_MAP_SIZE=1024
VITE_3D_VIEWER_ENABLE_POSTPROCESSING=true

# Car3D.net Settings (documentation only - no API integration)
# Purchase models from: https://car3d.net/
# Supported formats: GLB (recommended), GLTF, FBX, OBJ, USDZ
# Recommended quality: Medium (50k-150k polygons)
# Max file size: 100MB
