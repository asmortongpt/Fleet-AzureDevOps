# Server Configuration
NODE_ENV=production
PORT=3000

# Azure AD OAuth Configuration
AZURE_AD_CLIENT_ID=baae0851-0c24-4214-8587-e3fabc46bd4a
AZURE_AD_CLIENT_SECRET=<from-azure-key-vault>
AZURE_AD_TENANT_ID=0ec14b81-7b82-45ee-8f3d-cbc31ced5347
AZURE_AD_REDIRECT_URI=https://fleet.capitaltechalliance.com/auth/callback

# JWT Configuration
JWT_SECRET=<from-azure-key-vault>
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_HOST=fleet-postgres
DATABASE_PORT=5432
DATABASE_NAME=fleetdb
DATABASE_USER=fleetuser
DATABASE_PASSWORD=<from-azure-key-vault>
DATABASE_SSL=false

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=fleet-redis
REDIS_PORT=6379
REDIS_URL=redis://fleet-redis:6379
REDIS_PASSWORD=<from-azure-key-vault>
REDIS_REQUIRED=false

# Rate Limiting Configuration
# Enable/disable rate limiting features
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTO_BAN=true
RATE_LIMIT_ALERTS=true

# IP Whitelist (comma-separated IPs that bypass rate limiting)
# Example: RATE_LIMIT_WHITELIST_IPS=10.0.0.1,10.0.0.2,192.168.1.100
RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1

# CORS Configuration
FRONTEND_URL=https://fleet.capitaltechalliance.com

# Azure Key Vault (optional, for production secrets)
AZURE_KEY_VAULT_URL=https://fleet-secrets.vault.azure.net/

# Logging
LOG_LEVEL=info
