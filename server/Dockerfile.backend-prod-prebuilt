# Fleet Management API - Production Backend Dockerfile (Pre-built)
# Uses pre-compiled dist folder to avoid TypeScript compilation errors in Docker
# Built for Azure Container Registry and Azure Container Instances

FROM node:20-alpine

# Install build dependencies for native modules
RUN apk add --no-cache python3 make g++

# Security: Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

WORKDIR /app

# Install runtime dependencies only
COPY package*.json ./
RUN npm ci --only=production && \
    npm cache clean --force && \
    apk del python3 make g++

# Copy pre-built application
COPY --chown=nodejs:nodejs dist ./dist
COPY --chown=nodejs:nodejs migrations ./migrations
COPY --chown=nodejs:nodejs package.json ./package.json

# Create necessary directories with proper permissions
RUN mkdir -p /app/logs /app/uploads && \
    chown -R nodejs:nodejs /app

# Switch to non-root user for security
USER nodejs

# Expose API port
EXPOSE 3000

# Environment variables (will be overridden by Azure Container Instance)
ENV NODE_ENV=production
ENV PORT=3000

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})" || exit 1

# Metadata labels
LABEL maintainer="Capital Tech Alliance"
LABEL version="1.0.0"
LABEL description="Fleet Management Backend API - Production Build (Pre-compiled)"

# Start the application
CMD ["node", "dist/index.js"]
