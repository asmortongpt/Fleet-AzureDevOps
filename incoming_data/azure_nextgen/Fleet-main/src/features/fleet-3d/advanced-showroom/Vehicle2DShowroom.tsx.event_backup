interface Vehicle2DShowroomProps {
  onVehicleSelect?: (vehicle: ShowroomVehicle) => void;
  className?: string;
}

export const Vehicle2DShowroom: React.FC<Vehicle2DShowroomProps> = ({
  onVehicleSelect,
  className = ''
}) => {
  const [vehicles] = useState<ShowroomVehicle[]>(SHOWROOM_VEHICLES);
  const [selectedVehicle, setSelectedVehicle] = useState<ShowroomVehicle | null>(null);
  const [viewMode, setViewMode] = useState<'grid' | 'list'>('grid');
  const [filterType, setFilterType] = useState<string>('all');
  const [searchQuery, setSearchQuery] = useState('');
  const [favorites, setFavorites] = useState<string[]>([]);

  // Filter vehicles based on search and type
  const filteredVehicles = useMemo(() => {
    let filtered = vehicles;

    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      filtered = filtered.filter(vehicle =>
        vehicle.make.toLowerCase().includes(query) ||
        vehicle.model.toLowerCase().includes(query) ||
        vehicle.color.toLowerCase().includes(query) ||
        vehicle.type.toLowerCase().includes(query)
      );
    }

    if (filterType !== 'all') {
      if (filterType === 'featured') {
        filtered = filtered.filter(vehicle => vehicle.isFeatured);
      } else if (filterType === 'new') {
        filtered = filtered.filter(vehicle => vehicle.isNew);
      } else if (filterType === 'available') {
        filtered = filtered.filter(vehicle => vehicle.availability === 'available');
      } else {
        filtered = filtered.filter(vehicle => vehicle.type === filterType);
      }
    }

    return filtered;
  }, [vehicles, searchQuery, filterType]);

  const handleVehicleSelect = (vehicle: ShowroomVehicle) => {
    setSelectedVehicle(vehicle);
    onVehicleSelect?.(vehicle);
  };

  const toggleFavorite = (vehicleId: string) => {
    setFavorites(prev => 
      prev.includes(vehicleId)
        ? prev.filter(id => id !== vehicleId)
        : [...prev, vehicleId]
    );
  };

  const getAvailabilityColor = (availability: string) => {
    switch (availability) {
      case 'available': return 'text-green-600';
      case 'reserved': return 'text-blue-600';
      case 'maintenance': return 'text-yellow-600';
      case 'checked_out': return 'text-red-600';
      default: return 'text-gray-600';
    }
  };

  const getAvailabilityBadge = (availability: string) => {
    const colors = {
      available: 'bg-green-100 text-green-800 border-green-200',
      reserved: 'bg-blue-100 text-blue-800 border-blue-200',
      maintenance: 'bg-yellow-100 text-yellow-800 border-yellow-200',
      checked_out: 'bg-red-100 text-red-800 border-red-200'
    };
    
    return colors[availability as keyof typeof colors] || 'bg-gray-100 text-gray-800 border-gray-200';
  };

  const VehicleCard = ({ vehicle }: { vehicle: ShowroomVehicle }) => (
    <motion.div
      layout
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      whileHover={{ y: -8, scale: 1.02 }}
      className="group relative"
    >
      <Card className={`overflow-hidden cursor-pointer transition-all duration-300 hover:shadow-2xl border-2 hover:border-blue-300 ${
        selectedVehicle?.id === vehicle.id ? 'ring-4 ring-blue-500 border-blue-500' : 'border-gray-200'
      }`}>
        {/* Vehicle Image */}
        <div className="relative h-48 bg-gradient-to-br from-gray-50 to-gray-100 p-6 overflow-hidden">
          {/* Featured Badge */}
          {vehicle.isFeatured && (
            <div className="absolute top-3 left-3 z-10">
              <Badge className="bg-gradient-to-r from-yellow-400 to-orange-500 text-white border-none">
                <Sparkles className="w-3 h-3 mr-1" />
                Featured
              </Badge>
            </div>
          )}
          
          {/* New Badge */}
          {vehicle.isNew && (
            <div className="absolute top-3 right-3 z-10">
              <Badge className="bg-gradient-to-r from-emerald-400 to-green-500 text-white border-none">
                NEW
              </Badge>
            </div>
          )}

          {/* Favorite Button */}
          <Button
            variant="ghost"
            size="sm"
            className="absolute top-3 right-12 z-10 opacity-0 group-hover:opacity-100 transition-opacity"
            onClick={(e) => {
              e.stopPropagation();
              toggleFavorite(vehicle.id);
            }}
          >
            <Heart className={`w-4 h-4 ${favorites.includes(vehicle.id) ? 'fill-red-500 text-red-500' : 'text-gray-500'}`} />
          </Button>

          {/* Vehicle SVG */}
          <div className="flex items-center justify-center h-full">
            <motion.div
              whileHover={{ scale: 1.1 }}
              transition={{ duration: 0.2 }}
              className="transform transition-transform duration-300"
            >
              <img 
                src={vehicle.image}
                alt={`${vehicle.make} ${vehicle.model}`}
                className="w-full h-full object-contain drop-shadow-lg"
              />
            </motion.div>
          </div>

          {/* Availability Status */}
          <div className="absolute bottom-3 left-3">
            <Badge className={`${getAvailabilityBadge(vehicle.availability)} border`}>
              {vehicle.availability === 'available' && <CheckCircle className="w-3 h-3 mr-1" />}
              {vehicle.availability === 'reserved' && <Clock className="w-3 h-3 mr-1" />}
              {vehicle.availability === 'maintenance' && <AlertTriangle className="w-3 h-3 mr-1" />}
              {vehicle.availability === 'checked_out' && <XCircle className="w-3 h-3 mr-1" />}
              {vehicle.availability.replace('_', ' ').toUpperCase()}
            </Badge>
          </div>
        </div>

        {/* Vehicle Details */}
        <CardContent className="p-4">
          <div className="space-y-3">
            {/* Title and Price */}
            <div className="flex justify-between items-start">
              <div>
                <h3 className="text-lg font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                  {vehicle.year} {vehicle.make}
                </h3>
                <p className="text-sm font-semibold text-gray-700">{vehicle.model}</p>
                <p className="text-xs text-gray-500">{vehicle.color}</p>
              </div>
              <div className="text-right">
                <p className="text-xl font-bold text-blue-600">
                  ${vehicle.price.toLocaleString()}
                </p>
                <div className="flex items-center gap-1">
                  {[...Array(5)].map((_, i) => (
                    <Star key={i} className={`w-3 h-3 ${i < Math.floor(vehicle.rating) ? 'fill-yellow-400 text-yellow-400' : 'text-gray-300'}`} />
                  ))}
                  <span className="text-xs text-gray-500 ml-1">({vehicle.rating})</span>
                </div>
              </div>
            </div>

            {/* Specs Grid */}
            <div className="grid grid-cols-2 gap-3 text-xs">
              <div className="flex items-center gap-2">
                <Fuel className="w-4 h-4 text-green-500" />
                <span className="text-gray-600">MPG:</span>
                <span className="font-semibold">{vehicle.specs.mpg}</span>
              </div>
              <div className="flex items-center gap-2">
                <Users className="w-4 h-4 text-blue-500" />
                <span className="text-gray-600">Seats:</span>
                <span className="font-semibold">{vehicle.capacity}</span>
              </div>
              <div className="flex items-center gap-2">
                <Zap className="w-4 h-4 text-purple-500" />
                <span className="text-gray-600">Engine:</span>
                <span className="font-semibold">{vehicle.specs.engine}</span>
              </div>
              <div className="flex items-center gap-2">
                <MapPin className="w-4 h-4 text-orange-500" />
                <span className="text-gray-600">Location:</span>
                <span className="font-semibold truncate">{vehicle.location}</span>
              </div>
            </div>

            {/* Fuel Level */}
            <div>
              <div className="flex justify-between text-xs mb-1">
                <span className="text-gray-600">Fuel Level</span>
                <span className="font-semibold">{vehicle.fuelLevel}%</span>
              </div>
              <Progress 
                value={vehicle.fuelLevel} 
                className={`h-2 ${
                  vehicle.fuelLevel > 75 ? 'bg-green-100' : 
                  vehicle.fuelLevel > 50 ? 'bg-yellow-100' : 
                  vehicle.fuelLevel > 25 ? 'bg-orange-100' : 'bg-red-100'
                }`}
              />
            </div>

            {/* Features */}
            <div>
              <p className="text-xs text-gray-500 mb-2">Key Features:</p>
              <div className="flex flex-wrap gap-1">
                {vehicle.features.slice(0, 3).map((feature, idx) => (
                  <Badge key={idx} variant="outline" className="text-xs px-2 py-1">
                    {feature}
                  </Badge>
                ))}
                {vehicle.features.length > 3 && (
                  <Badge variant="outline" className="text-xs px-2 py-1">
                    +{vehicle.features.length - 3} more
                  </Badge>
                )}
              </div>
            </div>

            {/* Action Buttons */}
            <div className="flex gap-2 pt-2">
              <Button 
                className="flex-1"
                disabled={vehicle.availability !== 'available'}
                onClick={() => handleVehicleSelect(vehicle)}
              >
                <Eye className="w-4 h-4 mr-2" />
                {vehicle.availability === 'available' ? 'View Details' : 'Unavailable'}
              </Button>
              <Button variant="outline" size="sm">
                <Share2 className="w-4 h-4" />
              </Button>
            </div>
          </div>
        </CardContent>
      </Card>
    </motion.div>
  );

  const Star = ({ className }: { className: string }) => (
    <svg className={className} fill="currentColor" viewBox="0 0 20 20">
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
    </svg>
  );

  return (
    <div className={`min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 ${className}`}>
      {/* Header Section */}
      <div className="bg-white shadow-sm border-b">
        <div className="max-w-7xl mx-auto px-6 py-6">
          <div className="flex justify-between items-center mb-6">
            <div>
              <h1 className="text-4xl font-bold text-gray-900 mb-2">
                Fleet Vehicle Showroom
              </h1>
              <p className="text-gray-600 text-lg">
                Discover your perfect fleet vehicle from our premium selection
              </p>
            </div>
            <div className="flex items-center gap-3">
              <Badge variant="outline" className="text-sm px-3 py-1">
                <Car className="w-4 h-4 mr-2" />
                {filteredVehicles.length} vehicles
              </Badge>
              <Button
                variant={viewMode === 'grid' ? 'default' : 'outline'}
                size="sm"
                onClick={() => setViewMode('grid')}
              >
                <Grid3X3 className="w-4 h-4" />
              </Button>
              <Button
                variant={viewMode === 'list' ? 'default' : 'outline'}
                size="sm"
                onClick={() => setViewMode('list')}
              >
                <List className="w-4 h-4" />
              </Button>
            </div>
          </div>

          {/* Search and Filters */}
          <div className="flex flex-col md:flex-row gap-4">
            <div className="flex-1 relative">
              <Search className="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" />
              <input
                type="text"
                placeholder="Search by make, model, color, or type..."
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                className="w-full pl-12 pr-4 py-3 text-lg border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent shadow-sm"
              />
            </div>
            
            <div className="flex gap-2 flex-wrap">
              {[
                { key: 'all', label: 'All Vehicles', icon: Car },
                { key: 'featured', label: 'Featured', icon: Sparkles },
                { key: 'new', label: 'New', icon: Award },
                { key: 'available', label: 'Available', icon: CheckCircle },
                { key: 'executive', label: 'Executive', icon: Shield },
                { key: 'suv', label: 'SUV', icon: Car },
                { key: 'sedan', label: 'Sedan', icon: Car },
                { key: 'truck', label: 'Truck', icon: Car }
              ].map(({ key, label, icon: Icon }) => (
                <Button
                  key={key}
                  variant={filterType === key ? 'default' : 'outline'}
                  size="sm"
                  onClick={() => setFilterType(key)}
                  className="flex items-center gap-2"
                >
                  <Icon className="w-4 h-4" />
                  {label}
                </Button>
              ))}
            </div>
          </div>
        </div>
      </div>

      {/* Vehicle Grid */}
      <div className="max-w-7xl mx-auto px-6 py-8">
        {filteredVehicles.length > 0 ? (
          <div className={`grid gap-6 ${
            viewMode === 'grid' 
              ? 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4' 
              : 'grid-cols-1'
          }`}>
            <AnimatePresence>
              {filteredVehicles.map(vehicle => (
                <VehicleCard key={vehicle.id} vehicle={vehicle} />
              ))}
            </AnimatePresence>
          </div>
        ) : (
          <div className="text-center py-16">
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              className="max-w-md mx-auto"
            >
              <Car className="w-20 h-20 mx-auto text-gray-400 mb-6" />
              <h3 className="text-2xl font-bold text-gray-700 mb-3">No Vehicles Found</h3>
              <p className="text-gray-500 mb-6">
                We couldn't find any vehicles matching your search criteria. Try adjusting your filters.
              </p>
              <Button onClick={() => { setSearchQuery(''); setFilterType('all'); }}>
                <RefreshCw className="w-4 h-4 mr-2" />
                Reset Filters
              </Button>
            </motion.div>
          </div>
        )}
      </div>
    </div>
  );
};

export default Vehicle2DShowroom;