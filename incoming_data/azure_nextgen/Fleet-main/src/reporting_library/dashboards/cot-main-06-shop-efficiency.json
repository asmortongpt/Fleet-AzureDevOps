{
  "id": "cot-main-06",
  "title": "Shop Efficiency",
  "domain": "shop",
  "category": "city_tallahassee_main",
  "description": "Billable vs paid hours with trend over time",
  "datasource": {"type": "sqlView", "view": "vw_shop_efficiency", "parameters": {"date_start": "{{dateRange.start}}", "date_end": "{{dateRange.end}}", "shop": "{{shop}}"}},
  "filters": [{"name": "dateRange", "type": "dateRange", "default": "last_12_months", "required": true}, {"name": "shop", "type": "multiSelect", "values": "dynamic", "default": "All"}],
  "visuals": [
    {"id": "kpis", "type": "kpiTiles", "title": "Efficiency Metrics", "measures": [{"id": "billable_hours", "label": "Billable Hours", "format": "decimal", "aggregation": "sum", "field": "billable_hours"}, {"id": "paid_hours", "label": "Paid Hours", "format": "decimal", "aggregation": "sum", "field": "paid_hours"}, {"id": "efficiency_rate", "label": "Efficiency %", "format": "percent", "expression": "billable_hours/paid_hours"}], "layout": {"x": 0, "y": 0, "w": 12, "h": 2}},
    {"id": "efficiency_trend", "type": "line", "title": "Efficiency Trend", "encoding": {"x": {"field": "month", "type": "temporal"}, "y": {"field": "efficiency_rate", "type": "quantitative"}, "color": {"field": "shop_name", "type": "nominal"}}, "layout": {"x": 0, "y": 2, "w": 12, "h": 4}}
  ],
  "exports": [{"format": "csv"}, {"format": "xlsx"}, {"format": "pdf"}],
  "security": {"rowLevel": [{"role": "ShopManager", "rule": "shop_name IN user.shops"}, {"role": "Admin", "rule": "TRUE"}]}
}
