{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    // Enable strict mode for type safety
    "strict": true,
    // CRITICAL: Fail on errors to prevent unsafe code from being deployed
    "noEmitOnError": true,
    // CRITICAL: Enable strict null checks to catch potential runtime errors
    "strictNullChecks": true,
    // CRITICAL: Require explicit types to prevent implicit any
    "noImplicitAny": true,
    // Additional strict checks for better type safety
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // Code quality checks - disabled to allow existing patterns
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    // Module resolution and interop
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    // Source map generation
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "src/**/*.test.ts", "src/**/__tests__/**", "src/__tests__/**", "src/examples/**"]
}
