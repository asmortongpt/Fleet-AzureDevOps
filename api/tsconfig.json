{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/*.example.ts",
    "src/**/*-example.ts",
    "src/**/*.selectbak",
    "src/**/examples/**",
    "src/examples/**",
    "src/scripts/**",
    "src/emulators/**",
    "src/monitoring/**",
    "src/routes/ai-*.ts",
    "src/routes/ai-*.routes.ts",
    "src/routes/mobile-*.ts",
    "src/routes/mobile-*.routes.ts",
    "src/routes/document-*.ts",
    "src/routes/document-*.routes.ts",
    "src/routes/ocr*.ts",
    "src/routes/ocr*.routes.ts",
    "src/routes/attachments*.ts",
    "src/routes/search.ts",
    "src/routes/heavy-equipment*.ts",
    "src/routes/vehicle-identification*.ts",
    "src/routes/documents.routes.ts",
    "src/routes/langchain*.ts",
    "src/routes/fuel-purchasing*.ts",
    "src/routes/custom-reports*.ts",
    "src/routes/calendar*.ts",
    "src/routes/fleet-optimizer*.ts",
    "src/routes/scheduling*.ts",
    "src/routes/cost-analysis*.ts",
    "src/routes/permissions*.ts",
    "src/routes/health*.ts",
    "src/routes/drill-through/**",
    "src/services/ai-*.ts",
    "src/services/document-*.ts",
    "src/services/Document*.ts",
    "src/services/fleet-optimizer*.ts",
    "src/services/attachment*.ts",
    "src/services/audit*.ts",
    "src/services/reservations*.ts",
    "src/services/*-service.ts",
    "src/repositories/enhanced/**",
    "src/repositories/*Repository.ts",
    "src/repositories/*.repository.ts",
    "src/repositories/index.ts",
    "src/config/connection-manager.ts",
    "src/modules/fleet/vehicles/**",
    "src/middleware/**",
    "src/routes/auth/**"
  ]
}