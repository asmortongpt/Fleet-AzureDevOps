{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/*.example.ts",
    "src/**/*-example.ts",
    "src/**/*.selectbak",
    "src/**/examples/**",
    "src/examples/**",
    "src/scripts/**",
    "src/routes/mobile-ocr.routes.ts",
    "src/routes/ocr.routes.ts",
    "src/routes/attachments.routes.ts",
    "src/routes/search.ts",
    "src/routes/mobile-notifications.routes.ts",
    "src/routes/heavy-equipment.routes.ts",
    "src/routes/vehicle-identification.routes.ts",
    "src/routes/documents.routes.ts",
    "src/routes/ai-insights.routes.ts",
    "src/routes/ai-search.ts",
    "src/routes/langchain.routes.ts",
    "src/routes/mobile-obd2.routes.ts",
    "src/routes/fuel-purchasing.routes.ts",
    "src/routes/custom-reports.routes.ts",
    "src/routes/calendar.routes.ts",
    "src/routes/document-geo.routes.ts",
    "src/routes/fleet-optimizer.routes.ts",
    "src/routes/scheduling.routes.ts",
    "src/routes/ai-task-asset.routes.ts",
    "src/routes/mobile-integration.routes.ts",
    "src/routes/cost-analysis.routes.ts",
    "src/routes/document-system.routes.ts",
    "src/routes/ai-chat.ts",
    "src/routes/permissions.routes.ts",
    "src/routes/health.routes.ts",
    "src/services/document-geo.service.ts",
    "src/services/fleet-optimizer.service.ts",
    "src/services/attachment.service.ts",
    "src/services/ai-task-prioritization.ts",
