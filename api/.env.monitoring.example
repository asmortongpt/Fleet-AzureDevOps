# Query Performance Monitoring Configuration
# Add these variables to your .env file to configure query monitoring

# ============================================================================
# Query Monitoring Settings
# ============================================================================

# Slow query threshold in milliseconds (default: 500ms)
SLOW_QUERY_THRESHOLD_MS=500

# Enable logging of all queries (default: false)
# WARNING: This can generate significant log volume in production
LOG_ALL_QUERIES=false

# Enable N+1 query detection (default: true)
DETECT_N_PLUS_ONE=true

# ============================================================================
# OpenTelemetry Configuration
# ============================================================================

# Service name for OpenTelemetry
OTEL_SERVICE_NAME=fleet-management-api

# Service version
API_VERSION=1.0.0

# OTLP endpoint (if not using Application Insights)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# ============================================================================
# Azure Application Insights (already configured)
# ============================================================================

# Application Insights connection string
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=https://xxx.in.applicationinsights.azure.com/

# ============================================================================
# Database Health Check
# ============================================================================

# Health check interval in milliseconds (default: 60000 = 1 minute)
DB_HEALTH_CHECK_INTERVAL=60000

# ============================================================================
# Usage Notes
# ============================================================================

# 1. Copy these settings to your main .env file
# 2. Adjust SLOW_QUERY_THRESHOLD_MS based on your performance requirements
# 3. Keep LOG_ALL_QUERIES=false in production
# 4. Monitor Application Insights for slow query alerts
# 5. Use the dashboard queries in docs/query-performance-dashboard.md
