FROM nginx:alpine

# Copy pre-built dist directory
COPY dist /usr/share/nginx/html

# FIXED nginx config - serves static assets correctly
RUN printf 'server {\n\
    listen 3000;\n\
    server_name _;\n\
    root /usr/share/nginx/html;\n\
    index index.html;\n\
    \n\
    # Static assets - serve directly, NO fallback to index.html\n\
    location ~* ^/assets/.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ {\n\
        try_files \$uri =404;\n\
        expires 1y;\n\
        add_header Cache-Control "public, immutable";\n\
    }\n\
    \n\
    # SPA routing fallback ONLY for HTML routes\n\
    location / {\n\
        try_files \$uri /index.html;\n\
    }\n\
    \n\
    location /api/ {\n\
        rewrite ^/api/(.*) /\$1 break;\n\
        proxy_pass http://fleet-api-service:80;\n\
        proxy_http_version 1.1;\n\
        proxy_set_header Upgrade \$http_upgrade;\n\
        proxy_set_header Connection "upgrade";\n\
        proxy_set_header Host \$host;\n\
        proxy_cache_bypass \$http_upgrade;\n\
    }\n\
    \n\
    location = /ready {\n\
        access_log off;\n\
        return 200 "ready\\n";\n\
        add_header Content-Type text/plain;\n\
    }\n\
}' > /etc/nginx/conf.d/default.conf

EXPOSE 3000
CMD ["nginx", "-g", "daemon off;"]
