# Server Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Frontend URL
FRONTEND_URL=https://fleet.capitaltechalliance.com

# JWT Configuration
JWT_SECRET=your-secure-random-secret-key-min-256-bits
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Azure AD Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_REDIRECT_URI=https://api.fleet.capitaltechalliance.com/api/auth/callback

# Redis Configuration
REDIS_HOST=fleet-redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Cookie Configuration
COOKIE_DOMAIN=.capitaltechalliance.com
