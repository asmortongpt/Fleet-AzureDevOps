# ============================================================================
# Fleet Agent Worker Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# GitHub Personal Access Token (for pushing code)
GITHUB_TOKEN=your_github_pat_here

# Anthropic API Key (for Claude Code)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Orchestrator URL (internal network)
ORCHESTRATOR_URL=http://172.191.51.49:3000

# Agent Configuration (override in docker-compose.yml)
AGENT_NAME=agent-d
AGENT_ROLE=general
LLM_MODEL=claude-sonnet-4

# Polling Configuration
POLL_INTERVAL=30000
HEARTBEAT_INTERVAL=60000

# Repository Path
REPO_PATH=/workspace/Fleet
