# ===========================================
# Fleet Management System - Environment Template
# Copy this file to .env and fill in your values
# ===========================================

# ------------------
# Frontend (Vite)
# ------------------
VITE_API_URL=http://localhost:3000
VITE_ENVIRONMENT=development

# Azure AD Authentication
VITE_AZURE_AD_CLIENT_ID=
VITE_AZURE_AD_TENANT_ID=
VITE_AZURE_AD_REDIRECT_URI=http://localhost:5173/auth/callback

# Azure Maps
VITE_AZURE_MAPS_SUBSCRIPTION_KEY=

# Feature Flags
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_TEAMS_INTEGRATION=true
VITE_ENABLE_EMAIL_CENTER=true
VITE_ENABLE_DARK_MODE=true

# ------------------
# Backend API
# ------------------

# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fleet_dev
DATABASE_USER=fleetadmin
DATABASE_PASSWORD=
DATABASE_SSL=false

# Authentication - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=
SESSION_SECRET=
API_KEY_SALT=

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------
# AI Services (Optional)
# ------------------

# OpenAI (for development)
OPENAI_API_KEY=

# Azure OpenAI (for production)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# ------------------
# Email & SMS (Optional)
# ------------------

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ------------------
# File Storage
# ------------------

DOCUMENT_UPLOAD_DIR=./uploads/documents
REPORTS_OUTPUT_DIR=./reports

# ------------------
# Logging
# ------------------

DEBUG=fleet:*
LOG_LEVEL=debug
