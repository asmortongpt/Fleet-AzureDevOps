# Production Environment Configuration
# Copy this file to .env.production and fill in your production values
# CRITICAL: Never commit actual credentials!
# Use secure secret management (AWS Secrets Manager, Azure Key Vault, etc.)
# All sensitive values should be injected at build time or runtime from secure vaults

# MARK: - API Configuration
FLEET_API_BASE_URL=https://fleet.capitaltechalliance.com
FLEET_API_TIMEOUT=30
FLEET_API_RETRY_COUNT=3

# MARK: - Azure Configuration
AZURE_BASE_URL=https://dcf-fleet-management.azurewebsites.net
AZURE_TENANT_ID=production-tenant-id
AZURE_CLIENT_ID=production-client-id
AZURE_RESOURCE_GROUP=fleet-management-rg
AZURE_APP_SERVICE_NAME=dcf-fleet-management
AZURE_STORAGE_ACCOUNT=productionfleetstg
AZURE_KEY_VAULT_URL=https://fleet-production-kv.vault.azure.net

# MARK: - Firebase Configuration
FIREBASE_PROJECT_ID=dcf-fleet-production
FIREBASE_API_KEY=production-firebase-api-key
FIREBASE_AUTH_DOMAIN=dcf-fleet-production.firebaseapp.com
FIREBASE_DATABASE_URL=https://dcf-fleet-production.firebaseio.com
FIREBASE_STORAGE_BUCKET=dcf-fleet-production.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:ios:abcdef1234567890
FIREBASE_MEASUREMENT_ID=G-PRODUCTION

# MARK: - Authentication
AUTH_API_URL=https://fleet.capitaltechalliance.com/auth
AUTH_OAUTH_REDIRECT_URL=fleetmgmt://oauth-callback
AUTH_SESSION_TIMEOUT=3600

# MARK: - Storage & Database
LOCAL_DATABASE_PATH=file:///app/data/production.db
LOCAL_DATABASE_ENCRYPTION_KEY=production-encryption-key-must-be-very-strong-and-secure
KEYCHAIN_BACKUP_ENABLED=true

# MARK: - Feature Flags
FEATURE_CRASH_REPORTING=true
FEATURE_ANALYTICS=true
FEATURE_OFFLINE_MODE=true
FEATURE_BACKGROUND_SYNC=true
FEATURE_DARK_MODE=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_BARCODE_SCANNER=true
FEATURE_CAMERA=true
FEATURE_LOCATION_TRACKING=true
FEATURE_OBD2_SUPPORT=true
FEATURE_DOCUMENT_SCANNING=true

# MARK: - Logging & Debugging (MINIMAL in production)
LOG_LEVEL=error
ENABLE_CONSOLE_LOGGING=false
ENABLE_FILE_LOGGING=false
ENABLE_NETWORK_DEBUG_LOGGING=false
ENABLE_DATABASE_DEBUG_LOGGING=false
ENABLE_VERBOSE_CRASH_REPORTING=false

# MARK: - Security Configuration (STRICT in production)
CERTIFICATE_PINNING_ENABLED=true
SSL_PINNING_ENABLED=true
ALLOW_HTTP_CONNECTIONS=false
REQUIRE_HTTPS=true
ALLOW_SELF_SIGNED_CERTIFICATES=false

# MARK: - Crash Reporting & Analytics
SENTRY_DSN=https://production-sentry-key@sentry.io/production-project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0
AMPLITUDE_API_KEY=production-amplitude-key
AMPLITUDE_SERVER_URL=https://api.amplitude.com

# MARK: - Image & Cache Configuration
IMAGE_CACHE_SIZE=52428800
HTTP_CACHE_TTL=3600
IMAGE_COMPRESSION_QUALITY=0.90

# MARK: - Geolocation Configuration
MAPBOX_ACCESS_TOKEN=pk.production_mapbox_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12
GEOLOCATION_UPDATE_INTERVAL=30
GEOLOCATION_ACCURACY_THRESHOLD=50

# MARK: - OBD2 Configuration
OBD2_SIMULATION_ENABLED=false
OBD2_LOG_PATH=file:///app/logs/obd2.log

# MARK: - Document Scanning
DOCUMENT_SCANNING_OCR_ENABLED=true
DOCUMENT_QUALITY_THRESHOLD=0.80

# MARK: - Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_SANDBOX_MODE=false
FCM_CREDENTIALS_PATH=/secure/vault/fcm-credentials.json

# MARK: - Compliance & Privacy (ENFORCED in production)
GDPR_ENABLED=true
CCPA_ENABLED=true
PRIVACY_POLICY_URL=https://fleet.capitaltechalliance.com/privacy
TERMS_OF_SERVICE_URL=https://fleet.capitaltechalliance.com/terms
DATA_RETENTION_DAYS=365

# MARK: - Third-Party Services
SEGMENT_WRITE_KEY=production-segment-key
MIXPANEL_TOKEN=production-mixpanel-token
DATADOG_CLIENT_TOKEN=production-datadog-token
DATADOG_APPLICATION_ID=production-datadog-app-id

# MARK: - Development Tools (ALL DISABLED in production)
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_MEMORY_PROFILING=false
ENABLE_NETWORK_INSPECTION=false
ENABLE_SQLITE_BROWSER=false
ENABLE_SCREENSHOT_CAPTURE=false
