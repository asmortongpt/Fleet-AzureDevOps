# Staging Environment Configuration
# Copy this file to .env.staging and fill in your staging values
# IMPORTANT: Staging should mirror production behavior for accurate testing
# DO NOT commit actual credentials - use .gitignore to exclude .env files

# MARK: - API Configuration
FLEET_API_BASE_URL=https://staging-fleet.capitaltechalliance.com
FLEET_API_TIMEOUT=30
FLEET_API_RETRY_COUNT=3

# MARK: - Azure Configuration
AZURE_BASE_URL=https://dcf-fleet-management-staging.azurewebsites.net
AZURE_TENANT_ID=staging-tenant-id
AZURE_CLIENT_ID=staging-client-id
AZURE_RESOURCE_GROUP=fleet-management-staging-rg
AZURE_APP_SERVICE_NAME=dcf-fleet-management-staging
AZURE_STORAGE_ACCOUNT=stagingfleetstg
AZURE_KEY_VAULT_URL=https://fleet-staging-kv.vault.azure.net

# MARK: - Firebase Configuration
FIREBASE_PROJECT_ID=dcf-fleet-staging
FIREBASE_API_KEY=staging-firebase-api-key
FIREBASE_AUTH_DOMAIN=dcf-fleet-staging.firebaseapp.com
FIREBASE_DATABASE_URL=https://dcf-fleet-staging.firebaseio.com
FIREBASE_STORAGE_BUCKET=dcf-fleet-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=987654321
FIREBASE_APP_ID=1:987654321:ios:0987654321fedcba
FIREBASE_MEASUREMENT_ID=G-STAGING

# MARK: - Authentication
AUTH_API_URL=https://staging-fleet.capitaltechalliance.com/auth
AUTH_OAUTH_REDIRECT_URL=fleetmgmt://oauth-callback
AUTH_SESSION_TIMEOUT=3600

# MARK: - Storage & Database
LOCAL_DATABASE_PATH=file:///app/data/staging.db
LOCAL_DATABASE_ENCRYPTION_KEY=staging-encryption-key-must-be-strong
KEYCHAIN_BACKUP_ENABLED=true

# MARK: - Feature Flags
FEATURE_CRASH_REPORTING=true
FEATURE_ANALYTICS=true
FEATURE_OFFLINE_MODE=true
FEATURE_BACKGROUND_SYNC=true
FEATURE_DARK_MODE=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_BARCODE_SCANNER=true
FEATURE_CAMERA=true
FEATURE_LOCATION_TRACKING=true
FEATURE_OBD2_SUPPORT=true
FEATURE_DOCUMENT_SCANNING=true

# MARK: - Logging & Debugging
LOG_LEVEL=warning
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_NETWORK_DEBUG_LOGGING=false
ENABLE_DATABASE_DEBUG_LOGGING=false
ENABLE_VERBOSE_CRASH_REPORTING=true

# MARK: - Security Configuration
CERTIFICATE_PINNING_ENABLED=true
SSL_PINNING_ENABLED=true
ALLOW_HTTP_CONNECTIONS=false
REQUIRE_HTTPS=true
ALLOW_SELF_SIGNED_CERTIFICATES=false

# MARK: - Crash Reporting & Analytics
SENTRY_DSN=https://staging-sentry-key@sentry.io/staging-project-id
SENTRY_ENVIRONMENT=staging
SENTRY_RELEASE=1.0.0-staging
AMPLITUDE_API_KEY=staging-amplitude-key
AMPLITUDE_SERVER_URL=https://api.amplitude.com

# MARK: - Image & Cache Configuration
IMAGE_CACHE_SIZE=52428800
HTTP_CACHE_TTL=3600
IMAGE_COMPRESSION_QUALITY=0.85

# MARK: - Geolocation Configuration
MAPBOX_ACCESS_TOKEN=pk.staging_mapbox_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12
GEOLOCATION_UPDATE_INTERVAL=10
GEOLOCATION_ACCURACY_THRESHOLD=20

# MARK: - OBD2 Configuration
OBD2_SIMULATION_ENABLED=false
OBD2_LOG_PATH=file:///app/logs/obd2.log

# MARK: - Document Scanning
DOCUMENT_SCANNING_OCR_ENABLED=true
DOCUMENT_QUALITY_THRESHOLD=0.75

# MARK: - Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_SANDBOX_MODE=true
FCM_CREDENTIALS_PATH=/secure/path/to/fcm-credentials.json

# MARK: - Compliance & Privacy
GDPR_ENABLED=true
CCPA_ENABLED=true
PRIVACY_POLICY_URL=https://staging-fleet.capitaltechalliance.com/privacy
TERMS_OF_SERVICE_URL=https://staging-fleet.capitaltechalliance.com/terms
DATA_RETENTION_DAYS=365

# MARK: - Third-Party Services
SEGMENT_WRITE_KEY=staging-segment-key
MIXPANEL_TOKEN=staging-mixpanel-token
DATADOG_CLIENT_TOKEN=staging-datadog-token
DATADOG_APPLICATION_ID=staging-datadog-app-id

# MARK: - Development Tools
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MEMORY_PROFILING=false
ENABLE_NETWORK_INSPECTION=false
ENABLE_SQLITE_BROWSER=false
ENABLE_SCREENSHOT_CAPTURE=false
