# Development Environment Configuration
# Copy this file to .env.development and fill in your development values
# DO NOT commit actual credentials - use .gitignore to exclude .env files

# MARK: - API Configuration
FLEET_API_BASE_URL=http://localhost:3000
FLEET_API_TIMEOUT=10
FLEET_API_RETRY_COUNT=1

# MARK: - Azure Configuration
AZURE_BASE_URL=http://localhost:5555
AZURE_TENANT_ID=dev-tenant-id
AZURE_CLIENT_ID=dev-client-id
AZURE_RESOURCE_GROUP=fleet-management-dev-rg
AZURE_APP_SERVICE_NAME=dcf-fleet-management-dev
AZURE_STORAGE_ACCOUNT=devfleetstg
AZURE_KEY_VAULT_URL=http://localhost:8200

# MARK: - Firebase Configuration
FIREBASE_PROJECT_ID=dcf-fleet-development
FIREBASE_API_KEY=dev-firebase-api-key
FIREBASE_AUTH_DOMAIN=dcf-fleet-development.firebaseapp.com
FIREBASE_DATABASE_URL=http://localhost:8080
FIREBASE_STORAGE_BUCKET=dcf-fleet-development.appspot.com
FIREBASE_MESSAGING_SENDER_ID=111111111
FIREBASE_APP_ID=1:111111111:ios:111111111111111
FIREBASE_MEASUREMENT_ID=G-DEVELOPMENT

# MARK: - Authentication
AUTH_API_URL=http://localhost:3000/auth
AUTH_OAUTH_REDIRECT_URL=fleetmgmt://oauth-callback
AUTH_SESSION_TIMEOUT=3600

# MARK: - Storage & Database
LOCAL_DATABASE_PATH=file:///app/data/development.db
LOCAL_DATABASE_ENCRYPTION_KEY=dev-encryption-key-change-in-production
KEYCHAIN_BACKUP_ENABLED=false

# MARK: - Feature Flags
FEATURE_CRASH_REPORTING=false
FEATURE_ANALYTICS=false
FEATURE_OFFLINE_MODE=true
FEATURE_BACKGROUND_SYNC=true
FEATURE_DARK_MODE=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_BARCODE_SCANNER=true
FEATURE_CAMERA=true
FEATURE_LOCATION_TRACKING=true
FEATURE_OBD2_SUPPORT=true
FEATURE_DOCUMENT_SCANNING=true

# MARK: - Logging & Debugging
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false
ENABLE_NETWORK_DEBUG_LOGGING=true
ENABLE_DATABASE_DEBUG_LOGGING=true
ENABLE_VERBOSE_CRASH_REPORTING=true

# MARK: - Security Configuration
CERTIFICATE_PINNING_ENABLED=false
SSL_PINNING_ENABLED=false
ALLOW_HTTP_CONNECTIONS=true
REQUIRE_HTTPS=false
ALLOW_SELF_SIGNED_CERTIFICATES=true

# MARK: - Crash Reporting & Analytics
SENTRY_DSN=https://dev-sentry-key@sentry.io/dev-project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0-dev
AMPLITUDE_API_KEY=dev-amplitude-key
AMPLITUDE_SERVER_URL=http://localhost:8000

# MARK: - Image & Cache Configuration
IMAGE_CACHE_SIZE=26214400
HTTP_CACHE_TTL=600
IMAGE_COMPRESSION_QUALITY=0.8

# MARK: - Geolocation Configuration
MAPBOX_ACCESS_TOKEN=pk.dev_mapbox_token
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12
GEOLOCATION_UPDATE_INTERVAL=5
GEOLOCATION_ACCURACY_THRESHOLD=10

# MARK: - OBD2 Configuration
OBD2_SIMULATION_ENABLED=true
OBD2_LOG_PATH=file:///app/logs/obd2.log

# MARK: - Document Scanning
DOCUMENT_SCANNING_OCR_ENABLED=false
DOCUMENT_QUALITY_THRESHOLD=0.7

# MARK: - Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_SANDBOX_MODE=true
FCM_CREDENTIALS_PATH=/path/to/fcm-credentials.json

# MARK: - Compliance & Privacy
GDPR_ENABLED=false
CCPA_ENABLED=false
PRIVACY_POLICY_URL=http://localhost:3000/privacy
TERMS_OF_SERVICE_URL=http://localhost:3000/terms
DATA_RETENTION_DAYS=30

# MARK: - Third-Party Services
SEGMENT_WRITE_KEY=dev-segment-key
MIXPANEL_TOKEN=dev-mixpanel-token
DATADOG_CLIENT_TOKEN=dev-datadog-token
DATADOG_APPLICATION_ID=dev-datadog-app-id

# MARK: - Development Tools
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MEMORY_PROFILING=false
ENABLE_NETWORK_INSPECTION=true
ENABLE_SQLITE_BROWSER=true
ENABLE_SCREENSHOT_CAPTURE=true
