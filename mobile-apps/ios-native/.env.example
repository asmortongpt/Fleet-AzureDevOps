# .env.example - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================================================
# APPLE DEVELOPER ACCOUNT
# ============================================================================

# Your Apple ID email address
APPLE_ID=your-apple-id@example.com

# App-specific password (generate at appleid.apple.com)
# Security > App-Specific Passwords > Generate Password
FASTLANE_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Alternative password environment variable names (Fastlane supports both)
FASTLANE_USER=your-apple-id@example.com
FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD=xxxx-xxxx-xxxx-xxxx

# ============================================================================
# TEAM CONFIGURATION
# ============================================================================

# Apple Developer Team ID (found in Apple Developer Portal)
TEAM_ID=FFC6NRQ5U5

# iTunes Connect Team ID (usually same as TEAM_ID)
ITC_TEAM_ID=FFC6NRQ5U5

# ============================================================================
# CODE SIGNING (MATCH)
# ============================================================================

# Password to encrypt/decrypt certificates repository
MATCH_PASSWORD=your-secure-match-password

# Git repository URL for storing certificates
# Must be a PRIVATE repository
MATCH_GIT_URL=git@github.com:your-org/certificates.git

# Git branch to use (optional, defaults to master)
MATCH_GIT_BRANCH=main

# Git authentication (for HTTPS repositories)
# Base64 encoded: echo -n "username:personal_access_token" | base64
MATCH_GIT_BASIC_AUTHORIZATION=base64-encoded-credentials

# SSH private key path (for SSH repositories)
# MATCH_GIT_PRIVATE_KEY=/path/to/private/key

# Keychain configuration for CI
MATCH_KEYCHAIN_NAME=fastlane_tmp_keychain
MATCH_KEYCHAIN_PASSWORD=temporary-secure-password

# ============================================================================
# APP STORE CONNECT API (RECOMMENDED FOR CI/CD)
# ============================================================================

# API Key ID (from App Store Connect > Users and Access > Keys)
APP_STORE_CONNECT_API_KEY_ID=XXXXXXXXXX

# Issuer ID (from App Store Connect > Users and Access > Keys)
APP_STORE_CONNECT_API_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# API Key Content (base64 encoded .p8 file)
# cat AuthKey_XXXXXXXXXX.p8 | base64
APP_STORE_CONNECT_API_KEY_CONTENT=base64-encoded-p8-content

# Alternative: Path to .p8 file
# APP_STORE_CONNECT_API_KEY_PATH=/path/to/AuthKey_XXXXXXXXXX.p8

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Sentry DSN for crash reporting
SENTRY_DSN=https://your-sentry-dsn

# Firebase configuration
FIREBASE_API_KEY=your-firebase-api-key

# ============================================================================
# FASTLANE CONFIGURATION
# ============================================================================

# Skip waiting for build processing (true/false)
FASTLANE_SKIP_WAITING_FOR_BUILD_PROCESSING=false

# Timeout for Xcode operations (seconds)
FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT=120
FASTLANE_XCODE_LIST_TIMEOUT=120

# Disable color output (useful for CI)
# FASTLANE_DISABLE_COLORS=true

# Hide sensitive information in logs
# FASTLANE_HIDE_PLUGINS_TABLE=true

# ============================================================================
# CI/CD SPECIFIC
# ============================================================================

# Set to true when running in CI environment
# CI=true

# Xcode path (if multiple versions installed)
# DEVELOPER_DIR=/Applications/Xcode.app/Contents/Developer

# ============================================================================
# NOTES
# ============================================================================

# To generate an app-specific password:
# 1. Go to https://appleid.apple.com
# 2. Sign in with your Apple ID
# 3. Navigate to Security section
# 4. Under App-Specific Passwords, click "Generate Password"
# 5. Enter label (e.g., "Fastlane CI/CD")
# 6. Copy the generated password

# To create App Store Connect API Key:
# 1. Go to https://appstoreconnect.apple.com
# 2. Navigate to Users and Access > Keys
# 3. Click "+" to generate new API key
# 4. Give it a name (e.g., "Fastlane API")
# 5. Select role: "App Manager" or "Admin"
# 6. Download the .p8 file
# 7. Note the Key ID and Issuer ID
# 8. Convert to base64: cat AuthKey_XXXXXXX.p8 | base64

# To setup Match (first time):
# 1. Create a private git repository for certificates
# 2. Run: fastlane match init
# 3. Run: fastlane match development
# 4. Run: fastlane match appstore
# 5. Store MATCH_PASSWORD securely (1Password, etc.)
