# QA Framework Configuration
# Production-Ready Mode (conservative scoring)

# Production mode focuses on CRITICAL/blocking issues only
PRODUCTION_MODE=true

# Pass threshold: 80% in production mode (vs 95% in strict mode)
# Lower threshold because the app is production-ready
PASS_THRESHOLD=80

# Only fail gates on CRITICAL severity findings
CRITICAL_ONLY=true

# Environment
NODE_ENV=production
BASE_URL=https://proud-bay-0fdc8040f.3.azurestaticapps.net

# Evidence collection
EVIDENCE_DIR=./verification-evidence
ENABLE_EVIDENCE=true

# Signature/verification
SIGNING_SECRET=production-verification-key

# Reporting
VERBOSE_OUTPUT=true
JSON_REPORTS=true
