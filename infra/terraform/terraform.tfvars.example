# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Environment Configuration
environment     = "dev"
project_name    = "radio-fleet"
location        = "eastus"
location_short  = "eus"

# Common Tags
tags = {
  Project     = "Radio Fleet Dispatch"
  Environment = "Development"
  ManagedBy   = "Terraform"
  CostCenter  = "Engineering"
  Compliance  = "FedRAMP"
  Owner       = "Platform Team"
}

# Network Configuration
vnet_address_space                     = ["10.0.0.0/16"]
aks_subnet_address_prefix              = "10.0.1.0/24"
data_subnet_address_prefix             = "10.0.2.0/24"
private_endpoint_subnet_address_prefix = "10.0.3.0/24"

# AKS Configuration
aks_node_count     = 2
aks_node_vm_size   = "Standard_D4s_v3"
aks_min_node_count = 2
aks_max_node_count = 10
kubernetes_version = "1.28"

# Database Configuration
postgres_sku_name               = "GP_Standard_D2ds_v4"
postgres_storage_mb             = 32768
postgres_version                = "16"
postgres_backup_retention_days  = 35
postgres_geo_redundant_backup   = true
postgres_admin_username         = "pgadmin"

# Redis Configuration
redis_sku_name           = "Standard"
redis_family             = "C"
redis_capacity           = 1
redis_enable_non_ssl_port = false

# Service Bus Configuration
service_bus_sku = "Standard"

# Event Hub Configuration
event_hub_sku      = "Standard"
event_hub_capacity = 2

# Storage Configuration
storage_account_tier             = "Standard"
storage_account_replication_type = "GRS"

# Key Vault Configuration
key_vault_sku                         = "standard"
key_vault_soft_delete_retention_days  = 90

# Network Security
allowed_ip_ranges = [
  # Add your IP ranges here
  # "203.0.113.0/24",
]

# Feature Flags
enable_private_endpoints      = false
enable_encryption_at_rest     = true
enable_ddos_protection        = false
enable_network_policy         = true

