FROM nginx:alpine
WORKDIR /usr/share/nginx/html

# Remove default nginx config
RUN rm -f /etc/nginx/conf.d/default.conf

# Copy built app
COPY dist/ ./

# Copy nginx config  
COPY nginx.conf /etc/nginx/nginx.conf

# Update nginx config to listen on port 8080 (non-privileged)
RUN sed -i 's/listen 3000/listen 8080/g' /etc/nginx/nginx.conf

EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]
