# ==========================================
# Radio Dispatch Service - Environment Variables
# ==========================================

# Application
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://fleetadmin:password@localhost:5432/fleetdb
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Azure Cognitive Services
AZURE_SPEECH_KEY=your_speech_api_key_here
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=en-US

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=radio-audio

# Azure Key Vault (optional)
AZURE_KEY_VAULT_URL=

# AI Services
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Fleet API Integration
FLEET_API_BASE_URL=http://localhost:5000/api
FLEET_API_KEY=

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Processing Settings
MAX_AUDIO_DURATION_SECONDS=300
TRANSCRIPTION_CONFIDENCE_THRESHOLD=0.70
ENTITY_EXTRACTION_MODEL=en_core_web_sm

# Policy Engine
DEFAULT_OPERATING_MODE=hitl
POLICY_EXECUTION_TIMEOUT_SECONDS=30

# Socket.IO
SOCKETIO_ASYNC_MODE=asgi
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# CORS
CORS_ORIGINS=http://localhost:5173,https://fleet.capitaltechalliance.com

# Monitoring
ENABLE_PROMETHEUS=true
ENABLE_OPENTELEMETRY=true
OTEL_EXPORTER_OTLP_ENDPOINT=
