# Test Environment Configuration
MODE=development
LOG_LEVEL=INFO

# Test Database (SQLite in-memory)
DATABASE_URL=sqlite+aiosqlite:///:memory:

# Test Redis
REDIS_URL=redis://localhost:6379/15

# Test Message Broker
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Test Auth
OIDC_AUTHORITY=https://login.microsoftonline.com/test-tenant/v2.0
OIDC_CLIENT_ID=test-client-id
OIDC_CLIENT_SECRET=test-client-secret
OIDC_AUDIENCE=api://test-client-id

# Test JWT
JWT_SECRET=test-jwt-secret-for-testing-only
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Test Webhook
WEBHOOK_SIGNING_SECRET=test-webhook-secret

# Test Azure Services (mocked in tests)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=test;AccountKey=test;
AZURE_STORAGE_CONTAINER=test-container
AZURE_SPEECH_KEY=test-speech-key
AZURE_SPEECH_REGION=test-region
AZURE_KEY_VAULT_URI=https://test-kv.vault.azure.net/
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=test-key

# Test Feature Flags
FEATURE_FLAGS=monitor_only,hitl,autonomous_assist
DEFAULT_OP_MODE=hitl

# Test CORS
CORS_ORIGINS=http://localhost:3000

# Test PMO Tool
PMO_TOOL_ENABLED=false
PMO_TOOL_API_URL=http://localhost:3001
PMO_TOOL_API_KEY=test-pmo-key
PMO_TOOL_WEBHOOK_SECRET=test-pmo-webhook-secret

# Test Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=2000
