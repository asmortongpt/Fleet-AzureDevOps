# Environment Configuration
MODE=development
LOG_LEVEL=INFO
BUILD_TARGET=production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/radio_fleet_dispatch

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=  # Defaults to REDIS_URL if not set
CELERY_RESULT_BACKEND=  # Defaults to REDIS_URL if not set

# Message Broker (Kafka or Azure Event Hub)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
EVENT_HUB_CONNECTION_STRING=  # Optional: Azure Event Hub connection string
SERVICE_BUS_CONNECTION_STRING=  # Optional: Azure Service Bus connection string

# Azure Services
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=radio-transmissions
AZURE_SPEECH_KEY=your_speech_api_key_here
AZURE_SPEECH_REGION=eastus
AZURE_KEY_VAULT_URI=https://your-keyvault.vault.azure.net/
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# Celery Task Configuration
TASK_TIME_LIMIT=300
TASK_SOFT_TIME_LIMIT=270
TASK_MAX_RETRIES=3
TASK_DEFAULT_RETRY_DELAY=60
WORKER_CONCURRENCY=4
WORKER_PREFETCH_MULTIPLIER=2

# Transcription Settings
TRANSCRIPTION_LANGUAGE=en-US
TRANSCRIPTION_PROFANITY_OPTION=Masked  # Raw, Masked, Removed
ENABLE_DIARIZATION=true
MAX_SPEAKERS=10

# NLP Settings
ENTITY_EXTRACTION_CONFIDENCE_THRESHOLD=0.7
INTENT_DETECTION_CONFIDENCE_THRESHOLD=0.6
ENABLE_ADVANCED_NLP=false  # Set to true to use spaCy

# Policy Evaluation Settings
POLICY_EVALUATION_TIMEOUT=30
MAX_POLICIES_PER_EVALUATION=100
ENABLE_POLICY_CACHING=true
POLICY_CACHE_TTL=300
DEFAULT_OP_MODE=hitl  # monitor_only, hitl, autonomous_assist

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=radio-fleet-workers
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1
